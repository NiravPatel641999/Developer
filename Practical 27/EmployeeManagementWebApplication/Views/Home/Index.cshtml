@model IEnumerable<EmployeeManagementCommonHelper.ViewModel.EmployeeDetails>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "AddNewEmployeeDetails")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Designation)
        </th>
        <th id="ProfilePicture">
            @Html.DisplayNameFor(model => model.ProfilePicturePath)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Designation)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.ProfilePicturePath)*@
                <img src="~/Image/@Url.Content(item.ProfilePicturePath) " style="width:40px;height:40px;margin-left:22px;" alt="@item.ProfilePicturePath" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth,"{0:dd/MM/yyyy}")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.ActionLink("Edit", "UpdateEmployeeDetails", new { id = item.Id }) |
                <!--@Html.ActionLink("Details", "Details", new { id=item.Id }) |-->
                @Html.ActionLink("Delete", "DeleteEmployeeDetails", new { id = item.Id }, new { onclick = "return confirm('Are you sure you want to delete this record?');" })
            </td>
        </tr>
    }

</table>
<style scoped>
    #ProfilePicture {
        width: 180px;
    }
</style>